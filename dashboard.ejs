<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <script>
        function filterTasks() {
            const filter = document.getElementById('statusFilter').value;
            const rows = document.querySelectorAll('table tbody tr');
            rows.forEach(row => {
                const status = row.querySelector('td:last-child').innerText;
                if (filter === 'Todos' || status === filter) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function editTask(id) {
            window.location.href = `/edit-task/${id}`;
        }
    </script>
</head>
<body>
    <h1>Welcome, <%= username %></h1>
    <a href="/register-task">Register a New Task</a>
    <h2>Task List</h2>
    <label for="statusFilter">Filter by Status:</label>
    <select id="statusFilter" onchange="filterTasks()">
        <option value="Todos">Todos</option>
        <option value="Por hacer">Por hacer</option>
        <option value="En progreso">En progreso</option>
        <option value="Rechazado">Rechazado</option>
        <option value="Cancelado">Cancelado</option>
        <option value="Cerrado">Cerrado</option>
        <option value="En pruebas de calidad">En pruebas de calidad</option>
        <option value="En validaci贸n por el usuario">En validaci贸n por el usuario</option>
        <option value="En proceso de liberaci贸n">En proceso de liberaci贸n</option>
    </select>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>Client</th>
                <th>Project ID</th>
                <th>Comments</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(task => { %>
                <tr ondblclick="editTask('<%= task.id %>')">
                    <td><%= task.id %></td>
                    <td><%= task.title %></td>
                    <td><%= task.description %></td>
                    <td><%= task.startDate %></td>
                    <td><%= task.client %></td>
                    <td><%= task.projectId %></td>
                    <td><%= task.comments %></td>
                    <td><%= task.status %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
